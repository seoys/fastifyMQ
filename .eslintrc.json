{
	"env": {
		"node": true,
		"browser": true,
		"es2021": true
	},
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"airbnb-base",
		"plugin:prettier/recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"import/prefer-default-export": "off",
		"import/extensions": ["off"],
		"prettier/prettier": "error",
		"no-console": "off",
		"no-unused-vars": "warn",
		"no-tabs": 0
	},
	"globals": {
		"React": "writable"
	}
}
